@model TicketsWebApp.Models.LoginModel

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">
        @TempData["MensajeExito"]
    </div>
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow" style="width: 350px; border-radius: 15px;">
        <div class="text-center mb-4">
            <i class="fas fa-user-circle fa-4x" style="color: #007bff;"></i>
            <h2 class="mt-2">Iniciar Sesión</h2>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        <form method="post" action="/Home/Index">
            <div class="mb-3">
                <label class="form-label">Correo Electrónico:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="us_correo" class="form-control" placeholder="correo@dominio.com" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="us_clave" class="form-control" placeholder="••••••••" required />
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                </button>
            </div>
            <div class="text-center">
                <p>¿No tienes cuenta?</p>
                <a href="/Home/Register" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-user-plus"></i> Crear Cuenta
                </a>
            </div>
        </form>
    </div>
</div>