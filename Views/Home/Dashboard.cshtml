@if (TempData["MensajeBienvenida"] != null)
{
    <div class="alert alert-success text-center position-absolute top-0 start-50 translate-middle-x mt-3" style="z-index: 1000; width: 50%;">
        @TempData["MensajeBienvenida"]
    </div>
}

@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

<style>
    body, html {
        height: 100%;
        margin: 0;
        background: url('/images/tickets-background.png') no-repeat center center fixed;
        background-size: cover;
    }

    .dashboard-card {
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 20px;
        padding: 50px;
        width: 1000px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }

    .dashboard-btn {
        font-size: 30px;
        margin: 20px 0;
        padding: 40px; 
        width: 100%;
        height: 150px; 
        border-radius: 20px; 
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        flex-direction: column;
    }

        .dashboard-btn i {
            font-size: 50px; 
        }

        .dashboard-btn span {
            font-family: 'Playfair Display', serif;
            font-size: 40px;
            margin-top: 10px;
            font-weight: bold;
            color: white;
        }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .align-items-center {
        align-items: center;
    }

    .vh-100 {
        min-height: 100vh;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="dashboard-card text-center">
        <a href="/Usuarios/Users" class="btn btn-primary dashboard-btn">
            <i class="fas fa-users"></i>
            <span>USUARIOS</span>
            
        </a>
        <a href="/Roles" class="btn btn-secondary dashboard-btn">
            <i class="fas fa-user-tag"></i>
            <span>ROLES DE USUARIO</span>
            
        </a>
        <a href="/Tickets" class="btn btn-success dashboard-btn">
            <i class="fas fa-ticket-alt"></i> 
            <span>TIQUETES</span>
            
        </a>
    </div>
</div>