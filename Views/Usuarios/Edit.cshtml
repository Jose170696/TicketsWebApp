@model TicketsWebApp.Models.Usuarios

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mb-4">
    <h2 class="mt-4"><i class="fas fa-user-edit"></i> Editar Usuario</h2>
</div>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success text-center">@TempData["MensajeExito"]</div>
}

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="us_identificador" />

    <div class="mb-3">
        <label asp-for="us_nombre_completo" class="form-label">
            <i class="fas fa-user"></i> Nombre Completo
        </label>
        <input asp-for="us_nombre_completo" class="form-control" />
        <span asp-validation-for="us_nombre_completo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="us_correo" class="form-label">
            <i class="fas fa-envelope"></i> Correo Electrónico
        </label>
        <input asp-for="us_correo" type="email" class="form-control" readonly />
        <span asp-validation-for="us_correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="us_clave" class="form-label">
            <i class="fas fa-lock"></i> Contraseña
        </label>
        <input asp-for="us_clave" type="password" class="form-control" />
        <span asp-validation-for="us_clave" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="us_ro_identificador" class="form-label">
            <i class="fas fa-user-tag"></i> Rol
        </label>
        <select asp-for="us_ro_identificador" class="selectpicker form-control" data-width="100%" data-style="btn-outline-secondary">
            <option value="1" selected="@Model.us_ro_identificador == 1" data-content="<span><i class='fas fa-headset'></i> Soporte</span>">Soporte</option>
            <option value="2" selected="@Model.us_ro_identificador == 2" data-content="<span><i class='fas fa-user-tie'></i> Analista</span>">Analista</option>
        </select>
        <span asp-validation-for="us_ro_identificador" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="us_estado" class="form-label">
            <i class="fas fa-toggle-on"></i> Estado
        </label>
        <select asp-for="us_estado" class="form-control">
            <option value="A" selected="@Model.us_estado == " A"">Activo</option>
            <option value="I" selected="@Model.us_estado == " I"">Inactivo</option>
        </select>
        <span asp-validation-for="us_estado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="us_adicionado_por" class="form-label">
            <i class="fas fa-user-edit"></i> Adicionado Por
        </label>
        <input asp-for="us_adicionado_por" class="form-control" />
        <span asp-validation-for="us_adicionado_por" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i> Guardar Cambios
    </button>
    <a href="@Url.Action("Users", "Usuarios")" class="btn btn-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('.selectpicker').selectpicker();
        });
    </script>
}